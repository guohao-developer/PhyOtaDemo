<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:fitsSystemWindows="true"
    tools:context=".ui.MainActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="1dp"
        app:title="选择设备"
        app:titleTextColor="@color/black"
        app:titleCentered="true"
        tools:ignore="MissingConstraints" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_scan_qrcode_byText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:padding="12dp"
        android:text="输入IMEI号识别"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="@id/btn_scan_qrcode_byText"
        app:layout_constraintEnd_toEndOf="@id/btn_scan_qrcode_byText"
        app:layout_constraintStart_toStartOf="@id/btn_scan_qrcode_byText"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:padding="12dp"
        android:text="扫描二维码"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>

